@model IEnumerable<CS478_EventPlannerProject.Models.Events>
@{
    ViewData["Title"] = "My Events";
}

<h2>My Events</h2>
<link rel="stylesheet" href="~/css/events.css" />

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Event
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-calendar-event"></i> All Events
    </a>
</p>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    @if (!string.IsNullOrEmpty(item.BannerImageUrl))
                    {
                        <img src="@item.BannerImageUrl" class="card-img-top" alt="@item.EventName" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-calendar-event text-white" style="font-size: 3rem;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.EventName</h5>

                        @if (!string.IsNullOrEmpty(item.EventDescription))
                        {
                            <p class="card-text">
                                @(item.EventDescription.Length > 100
                                                    ? item.EventDescription.Substring(0, 100) + "..."
                                                    : item.EventDescription)
                </p>
                                }

                        <p class="text-muted mb-1">
                            <i class="bi bi-calendar"></i>
                            @item.StartDateTime.ToString("MMM dd, yyyy h:mm tt")
                        </p>

                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt"></i>
                            @if (item.IsVirtual)
                            {
                                <span>Virtual Event</span>
                            }
                            else
                            {
                                <span>@item.City, @item.State</span>
                            }
                        </p>

                        <p class="mb-2">
                            <i class="bi bi-people"></i>
                            <strong>@item.Attendees.Count</strong> attendee(s)
                            @if (item.MaxAttendees.HasValue)
                            {
                                <span>/ @item.MaxAttendees max</span>
                            }
                        </p>

                        <!-- Status Badges -->
                        <div class="mb-3">
                            @if (item.IsUpcoming)
                            {
                                <span class="badge bg-success">Upcoming</span>
                            }
                            else if (item.IsOngoing)
                            {
                                <span class="badge bg-warning text-dark">Ongoing</span>
                            }
                            else if (item.IsPast)
                            {
                                <span class="badge bg-secondary">Past</span>
                            }

                            @if (item.IsPrivate)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-lock"></i> Private
                                </span>
                            }
                        </div>

                        <!-- Action Buttons -->
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Attendees" asp-route-id="@item.EventId" class="btn btn-sm btn-info">
                                <i class="bi bi-people"></i> Attendees
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4 class="alert-heading">
            <i class="bi bi-info-circle"></i> No Events Yet
        </h4>
        <p>You haven't created any events yet.</p>
        <hr>
        <p class="mb-0">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Your First Event
            </a>
        </p>
    </div>
}