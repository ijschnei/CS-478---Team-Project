@model CS478_EventPlannerProject.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<link rel="stylesheet" href="~/css/account.css" />

<section class="account-container">
    <h1>Forgot Password</h1>
    <p class="subtitle">Enter your email to reset your password</p>

    <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="account-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="input-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="account-btn">Reset Password</button>

        <p class="account-link-text">
            <a asp-controller="Account" asp-action="Login">Back to Login</a>
        </p>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}