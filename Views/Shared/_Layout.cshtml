@using Microsoft.AspNetCore.Identity
@using CS478_EventPlannerProject.Models
@inject UserManager<Users> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feier</title>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="navbar">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/Feier_Logo_Prototype.png" alt="Feier Logo">
            </a>
        </div>
        <nav class="menu">
            <ul>
                <li><a asp-controller="EventsTabs" asp-action="Index">EVENTS</a></li>
                <li><a asp-controller="CalendarTabs" asp-action="Index">CALENDAR</a></li>
                <li><a asp-controller="ContactsTabs" asp-action="Index">CONTACTS</a></li>
                <li><a asp-controller="AboutTabs" asp-action="Index">ABOUT US</a></li>
            </ul>
        </nav>
        <div class="nav-right">
            <div class="search">
                <input type="text" placeholder="Search...">
                <button>Search</button>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="UserProfiles" asp-action="Profile" class="account-link">My Profile</a>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="account-link">Logout</button>
                </form>

            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="account-link">Account</a>
            }

        </div>

    </header>

    <main>
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script> window.chtlConfig = { chatbotId: "6383742647" } </script>
    <script async data-id="6383742647" id="chtl-script" type="text/javascript" src="https://chatling.ai/js/embed.js"></script>
</body>
</html>